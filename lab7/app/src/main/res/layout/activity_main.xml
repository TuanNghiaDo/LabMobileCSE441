<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_result"
        android:gravity="center"
        android:textColor="@color/background_child_activity"
        android:background="@color/background_main_activity"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edt_A"
        android:backgroundTint="@color/background_child_activity"
        android:textColor="@color/background_main_activity"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"/>
    <EditText
        android:id="@+id/edt_A"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_A"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edt_B"
        android:backgroundTint="@color/background_child_activity"
        android:textColor="@color/background_main_activity"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_A"/>
    <EditText
        android:id="@+id/edt_B"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_B"
        app:layout_constraintTop_toBottomOf="@+id/edt_A"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:backgroundTint="@color/background_child_activity"
        android:textColor="@color/edt_red"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_B"/>
    <EditText
        android:id="@+id/edt_result"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_B"
        app:layout_constraintTop_toBottomOf="@+id/edt_B"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_result"
        android:backgroundTint="@color/background_child_activity"
        android:textColor="@color/background_main_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_result"/>

</androidx.constraintlayout.widget.ConstraintLayout>